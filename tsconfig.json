{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noLib": false,
    "outDir": "dist",
    "lib": [
      "es2015",
      "dom"
    ],
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist"
  ]
}
